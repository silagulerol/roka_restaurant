<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login Form</title>
  <style>
    :root {
      --gold-crayola: hsl(38, 61%, 73%);
    }

   body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background: url('/public/images/testimonial-bg.jpg') no-repeat center center/cover;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      overflow: hidden;
    }

    .form-container {
      background-color: rgba(255, 255, 255, 0.95);
      padding: 30px 40px;
      border-radius: 12px;
      box-shadow: 0 10px 35px rgba(0, 0, 0, 0.2);
      width: 90%;
      max-width: 400px;
      z-index: 2;
      animation: slide-in 0.8s ease-out;
    }

    @keyframes slide-in {
      0% {
        opacity: 0;
        transform: translateY(-50px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .form-group {
      margin-bottom: 20px;
      display: flex;
      flex-direction: column;
    }

    .form-group label {
      margin-bottom: 8px;
      font-weight: 500;
      color: #444;
    }

    .form-group input[type="email"],
    .form-group input[type="password"] {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
      transition: border-color 0.3s ease;
    }

    .form-group input:focus {
      border-color: #007bff;
      outline: none;
    }

    .form-group small {
      margin-top: 5px;
      color: #6c757d;
      font-size: 12px;
    }

    .checkbox-group {
      display: flex;
      align-items: center;
    }

    .checkbox-group input {
      margin-right: 8px;
    }

    button[type="submit"] {
      width: 100%;
      background-color: #007bff;
      color: white;
      padding: 12px;
      border: none;
      font-size: 16px;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
      background-color: #0056b3;
    }

    /* ðŸŒŸ Styled hyperlink */
    .form-container a {
      display: block;
      text-align: center;
      margin-top: 20px;
      color: #007bff;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .form-container a:hover {
      color: #0056b3;
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h2>Login</h2>
    <form >
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" id="exampleInputEmail1" required>
        <small id="emailHelp">We'll never share your email with anyone else.</small>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" id="exampleInputPassword1" required>
      </div>

      <div class="form-group checkbox-group">
        <input type="checkbox" id="exampleCheck1">
        <label for="exampleCheck1">Remember me</label>
      </div>

      <button type="submit" value="Submit">Submit</button>
    </form>

    <!-- Styled hyperlink -->
    <a href="/">Go Back To Home Page</a>
    
  </div>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
 
  <script>
    
    document.querySelector("form").addEventListener("submit", async (e) => {
      e.preventDefault();
    
      const credentials = {
        email: document.getElementById("exampleInputEmail1").value,
        password: document.getElementById("exampleInputPassword1").value
      };
    
      try {
        const res = await axios.post("/api/users/auth", credentials);
        const token = res.data.data.token;
        const user = res.data.data.user;
        localStorage.setItem("accessToken", token);
        localStorage.setItem("accessUser", user);

        alert("Login successful!");
        console.log(user.manager_role_id);
        if (user.role_id == user.manager_role_id){
          window.location.href = "api/users/manager_home";  
        }else{
          window.location.href = "api/users/customer_home";  // redirect to protected route
        }
      } catch (err) {
        alert(err.response?.data?.error?.description || "Login failed");
      }
    });

  </script>
</body>
</html>